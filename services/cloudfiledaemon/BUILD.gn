  external_deps = [
    "ability_base:want",
    "common_event_service:cesfwk_innerkits",
    "dataclassification:data_transit_mgr",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]

  use_exceptions = true
  part_name = "dfs_service"
  subsystem_name = "filemanagement"
}
