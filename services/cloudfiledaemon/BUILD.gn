    "src/fuse_manager/fuse_manager.cpp",
    "src/ipc/cloud_daemon.cpp",
    "src/ipc/cloud_daemon_stub.cpp",
  ]

  configs = [ "${utils_path}:compiler_configs" ]

  defines = [
    "LOG_TAG=\"CloudFileDaemon\"",
