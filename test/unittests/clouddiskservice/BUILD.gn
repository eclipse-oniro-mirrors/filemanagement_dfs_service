  external_deps = [
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
  ]

  defines = [
    "private=public",
    "LOG_DOMAIN=0xD003900",
    "LOG_TAG=\"CloudDiskService\"",
  ]

  use_exceptions = true
}

group("clouddisk_service_test") {
  testonly = true
  deps = [
    ":disk_monitor_test",
    ":disk_utils_test",
  ]
}