import("//build/test.gni")
import("//foundation/filemanagement/dfs_service/distributedfile.gni")

ohos_unittest("battery_status_test") {
  module_out_path = "filemanagement/dfs_service"
  sources = [ "battery_status_test.cpp" ]

  include_dirs = [
    "${services_path}/cloudsyncservice/include",
    "${services_path}/cloudsyncservice/include/sync_rule",
  ]

  deps = [
    "${services_path}/cloudsyncservice:cloudsync_sa",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  defines = [ "private=public" ]

  use_exceptions = true
}

ohos_unittest("cloud_status_test") {
  module_out_path = "filemanagement/dfs_service"
  sources = [ "cloud_status_test.cpp" ]

  include_dirs = [
    "${services_path}/cloudsyncservice/include",
    "${services_path}/cloudsyncservice/include/sync_rule",
    "${media_library_path}/frameworks/utils/include",
  ]

  deps = [
    "${services_path}/cloudsyncservice:cloudsync_sa",
    "${utils_path}:libdistributedfileutils",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  if (!dfs_service_feature_enable_cloud_adapter) {
    deps += [
      "${distributedfile_path}/adapter/cloud_adapter_example:cloud_adapter",
    ]
  } else {
    external_deps += [ "drivekit_native:drivekit" ]
  }

  defines = [ "private=public" ]

  use_exceptions = true
}

group("cloudsync_sa_sync_rule_test") {
  testonly = true
  deps = [
    ":battery_status_test",
    ":cloud_status_test",
  ]
}
