  sources = [
    "${distributedfile_path}/interfaces/kits/ndk/clouddiskmanager/src/oh_cloud_disk_manager.cpp",
    "${distributedfile_path}/interfaces/kits/ndk/clouddiskmanager/src/oh_cloud_disk_utils.cpp",
