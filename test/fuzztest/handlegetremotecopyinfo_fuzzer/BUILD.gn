import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/filemanagement/dfs_service/distributedfile.gni")

ohos_fuzztest("HandleGetRemoteCopyInfoFuzzTest") {
  module_out_path = "dfs_service/dfs_service_daemon"
  fuzz_config_file = "${distributedfile_path}/test/fuzztest/handlegetremotecopyinfo_fuzzer" 
  include_dirs = [
    "${distributedfile_path}/services/distributedfiledaemon/include",
    "${distributedfile_path}/services/distributedfiledaemon/include/ipc",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [
    "${distributedfile_path}/services/distributedfiledaemon/src/ipc/daemon_stub.cpp",
    "${distributedfile_path}/test/fuzztest/handlegetremotecopyinfo_fuzzer/handlegetremotecopyinfo_fuzzer.cpp",
  ]
  defines = [ "DFS_LOG_TAG = \"dfs_service\"" ]
  deps = [
    "${services_path}/distributedfiledaemon:distributed_file_daemon_kit_inner",
    "${utils_path}:libdistributedfileutils",
  ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "app_file_service:remote_file_share_native",
    "cJSON:cjson_static",
    "c_utils:utils",
    "device_manager:devicemanagersdk",
    "dsoftbus:softbus_client",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
    "selinux_adapter:librestorecon",
    "samgr:samgr_proxy",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":HandleGetRemoteCopyInfoFuzzTest" ]
}
